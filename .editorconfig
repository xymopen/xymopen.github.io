# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2

# pnpm insists on using LF in its files
[{package.{json,json5,yml,yaml},pnpm-lock.yaml,pnpm-workspace.yaml,patches/*}]
end_of_line = lf
